<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Qyon" xsi:noNamespaceSchemaLocation="../../../phpcs.xsd">
    <description>A collection of generic sniffs. This standard is not designed to be used to check code.</description>
    <rule ref="PSR1"/>
    <rule ref="PSR2"/>
    <rule ref="PSR12">
        <exclude name="Generic.Files.LineLength" />
        <exclude name="Generic.Files.LineEndings" />
    </rule>
    <rule ref="PEAR.Commenting.ClassComment.Category"/>
    <rule ref="PEAR.Commenting.FileComment">
        <exclude name="PEAR.Commenting.FileComment.MissingAuthorTag"/>
        <exclude name="PEAR.Commenting.FileComment.MissingLicenseTag"/>
        <exclude name="PEAR.Commenting.FileComment.MissingLinkTag"/>
    </rule>
    <rule ref="PEAR.Commenting.FunctionComment"/>
    
    <rule ref="PEAR.Commenting.InlineComment"/>
</ruleset>
